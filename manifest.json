{
  "manifest_version": 2,

  "name": "bCharts.xyz - Chart Anything",
  "description": "bCharts.xyz is the simplest charting tool. Use this extension to enhance your experience and pull data from anywhere on the web!",
  "version": "1.2",

  "icons" : {
      "128" : "beelogo.png"
    },

  "browser_action": {
    "default_icon": "beelogo.png",
    "default_popup": "popup.html",
    "default_title": "bCharts.xyz - Chart Anything"
  },

  "background": {
    "scripts": ["js/jquery.min.js","background.js"]
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css" : ["css/background.css","css/popup.css"],
      "js": ["js/jquery.min.js","js/myscript.js","js/slider.js","js/jquery.tableCSVExport.js"]
    }
  ],

  "web_accessible_resources": [
    "*.png"
  ],

  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs"
  ]
}
